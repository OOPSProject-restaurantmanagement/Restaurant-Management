<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#622C27"
    tools:context=".">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="673dp"
        android:layout_height="939dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backgroundoops2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="380dp"
        android:layout_height="248dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144"
        app:srcCompat="@drawable/logoremovedbg" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="95dp"
        android:layout_height="109dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="88dp"
        android:layout_height="134dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/table"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="96dp"
        android:layout_height="151dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/mobilepayment"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="94dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:layout_editor_absoluteX="-2dp">

        <Button
            android:id="@+id/viewMenuBtn"
            android:layout_width="103dp"
            android:layout_height="61dp"
            android:backgroundTint="@color/brown_dark"
            android:fontFamily="sans-serif-medium"
            android:text="Menu"
            android:layout_marginStart="35dp"
            android:textColor="#fff" />

        <Button
            android:id="@+id/ReservationBtn"
            android:layout_width="103dp"
            android:layout_height="61dp"
            android:backgroundTint="@color/brown_dark"
            android:fontFamily="sans-serif-medium"
            android:text="Reserve"
            android:layout_marginStart="20dp"
            android:textColor="#fff" />

        <Button
            android:id="@+id/PayamentBtn"
            android:layout_width="103dp"
            android:layout_height="61dp"
            android:backgroundTint="@color/brown_dark"
            android:fontFamily="sans-serif-medium"
            android:text="Pay"
            android:layout_marginStart="30dp"
            android:textColor="#fff" />
    </LinearLayout>
    a
</androidx.constraintlayout.widget.ConstraintLayout>